<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.sec.iitr.tinytorch" android:exported="true">
    <uses-permission android:name="android.permission.INTERNET" />
<!--    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />-->
<!--    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/iconpng"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconpng"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name="com.sec.iitr.tinytorch.NotificationActivity" android:exported="true"/>
        <activity android:name="com.sec.iitr.tinytorch.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.sec.iitr.tinytorch.BackgroundService"
            android:exported="true" />
    </application>

</manifest>